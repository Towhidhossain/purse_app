{
    "manifest_version": 3,
    "name": "Purse - Quick Expense",
    "version": "0.1.0",
    "description": "Quick expense tracker - log your spending instantly from your browser!",
    "action": {
        "default_popup": "index.html",
        "default_title": "Purse - Quick Expense"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["storage"],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}